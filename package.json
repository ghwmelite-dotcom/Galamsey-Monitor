{
  "name": "galamsey-monitor",
  "version": "1.0.0",
  "description": "Comprehensive Galamsey Monitoring and Reporting Platform for Ghana",
  "scripts": {
    "dev": "next dev",
    "build": "npx @cloudflare/next-on-pages",
    "build:next": "next build",
    "start": "next start",
    "preview": "wrangler pages dev .vercel/output/static",
    "deploy": "wrangler pages deploy .vercel/output/static",
    "db:create": "wrangler d1 create galamsey-db",
    "db:push": "wrangler d1 execute galamsey-db --file=./scripts/d1-schema.sql",
    "db:push:local": "wrangler d1 execute galamsey-db --local --file=./scripts/d1-schema.sql"
  },
  "dependencies": {
    "@auth/core": "^0.34.3",
    "@cloudflare/next-on-pages": "^1.13.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "autoprefixer": "^10.4.23",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "jose": "^6.1.3",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.562.0",
    "next": "^15.1.0",
    "next-auth": "^4.24.13",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-leaflet": "^5.0.0",
    "recharts": "^3.6.0",
    "resend": "^6.8.0",
    "tailwindcss": "^4.1.18",
    "twilio": "^5.11.2",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^10.0.0",
    "wrangler": "^3.70.0"
  }
}
